alias gds="git diff --stat"
alias gl="git log --graph --pretty=format:'%C(magenta)%h%Creset -%C(bold green)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative"
alias gr='git remote -v'
